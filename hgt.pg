set label 2 sprintf("< %4.4g",min_y700) at second min_pos_y700, second min_y700 front tc rgb "dark-orange"
plot "final3.csv" using 1:13 title "700" lw 2 lt 2 lc "green" axis x1y2

## 4 ##

tics = floor((max_y850 - min_y850) / 5)

#unset label
set tmargin 0.2
unset bmargin
set datafile separator " "
set xdata time
set timefmt "%Y-%m-%d %H"
set xrange [time(0):time(0) + 5*24*60*60]
