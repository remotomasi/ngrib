stats data using 1:131
set timefmt "%Y-%m-%d %H:%M"
stats [time(0):time(0) + 5*24*60*60] 'data.csv' u (timecolumn(1)):131
max_yZ = STATS_max_y
min_yZ = STATS_min_y
max_pos_yZ = STATS_pos_max_y
min_pos_yZ = STATS_pos_min_y

# Retrieve statistical properties for 700 Hgt
